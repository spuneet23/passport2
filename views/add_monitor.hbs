<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"> Add Monitor</div>
        <div class="panel-body">
	      <form method="post" action="/monitors/add">
			  <div class="form-group">
			    <label for="deviceId">Device ID:</label>
			    <input type="text" class="form-control" id="deviceId" name="deviceId">
			  </div>
			  <div class="form-group">
			    <label for="location">Location:</label>
			    <input type="text" class="form-control" id="location" name="location">
			  </div>
			  <div class="form-group">
			    <label for="pwd">Password:</label>
			    <input type="password" class="form-control" id="pwd" name="pwd">
			  </div>
			  <div class="form-group">
			    <label for="cpwd">Confirm Password:</label>
			    <input type="password" class="form-control" id="cpwd" name="cpwd">
			  </div>
			  <button type="submit" class="btn btn-success btn-lg">Save Device</button>
			</form>
		  </div>
		</div>
    </div>
  </div>
</div>

